<h3><%= @stage.name %></h3>
<h5>Located at <%=@stage.location %> on your map!</h5>

<% if @artists.any? %>
<ul>
  <% @artists.sort_by(&:name).each do |artist| %>
  <% if artist.stage_id == @stage.id %>
  <li><a href="/LOTR_Fest/<%= @stage.id %>/artist/<%= artist.id %>"><%= artist.name %></a></li>
  <% end %>
  <% end %>
</ul>
<% else %>
<p>There are currently no performances to display.</p>
<% end %>

<a href="/LOTR_Fest/<%= @stage.id %>/edit">Edit Stage Info</a>
